generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ContactSubmission {
  id               String   @id @default(cuid())
  fullName         String
  email            String
  phone            String?
  company          String?
  topic            String
  message          String
  calculatorContext String?
  consent          Boolean
  createdAt        DateTime @default(now())

  @@map("contact_submissions")
}